generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  PROVIDER 
  ADMIN
  
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    name      String?
    role  Role @default(CUSTOMER)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
